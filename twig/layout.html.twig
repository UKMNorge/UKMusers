<h1>Deltakeres brukernavn og passord i arrangørsystemet</h1>

<div class="clearfix"></div>
<div class="UKM_tabs">
	<a href="?page=UKMusers&action=home" {{ GET('action') == 'home' or GET('action') is null ? 'class="active"' : ''}}>
		<div>
			<span class="tab_header">Tips</span>
			<img src="//ico.ukm.no/info-button-256.png" width="25"  border="0" /><br />
			<span class="tab_description">Generell info og mediaaktører</span>
		</div>
	</a>

	<a href="?page=UKMusers&action=media" {{ GET('action') == 'media' ? 'class="active"' : ''}}>
		<div>
			<span class="tab_header">UKM Media</span>
			<img src="//ico.ukm.no/camera-256.png" width="25"  border="0" /><br />
			<span class="tab_description">Tilgang til bilder, video og tekst</span>
		</div>
	</a>

	<a href="?page=UKMusers&action=arrangor" {{ GET('action') == 'arrangor' ? 'class="active"' : ''}}>
		<div>
			<span class="tab_header">Arrangører</span>
			<img src="//ico.ukm.no/people-256.png" width="25" border="0" /><br />
			<span class="tab_description">Tilgang til arrangørsystemet</span>
		</div>
	</a>
</div>

<div class="UKM_tabs_desc">
	<span></span>
</div>
<div class="UKM_content_wrapper">
	{% if error is defined %}
		<div class="UKMwidth">
			<div class="alert {{error.type == 'danger' ? 'alert-error alert-danger' : 'alert-'~error.type }}">
				<h4>{{error.title}}</h4>
				<p>{{error.message}}</p>
			</div>
		</div>
	{% endif %}
	
	{% block content %}
	{% endblock %}
</div>